@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successful</h1>
        Your order number is @Model. <br/><br/>
        <img alt="" src="~/images/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center" style="color: maroon">
        <br/>
        Your payment has been applied successfully. <br/>
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary">Go back to order</a>
    </div>
</div>